generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type ConfigLcmLocation {
  lat Float
  lon Float
}

model boop_log {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  clientIp  String
  date      String
  nfcId     String
  time      String
  userAgent String
}

model config {
  id                 String            @id @default(auto()) @map("_id") @db.ObjectId
  fapi_boop_count    Int
  lcm_hotel_location String
  lcm_location       ConfigLcmLocation
}

model tokens {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  event String
  name  String
}
